<launch>
  <env name="ROSCONSOLE_CONFIG_FILE" value="$(find single_robot_moveit_config)/config/rosconsole.config"/>
  <env name="ROSCONSOLE_FORMAT" value="[${severity}] : ${message}"/>
  <arg name="sim" default="false" />
  <arg name="debug" default="false" />
  <!-- 记得要把模型加载打开，否则会没有drug_gripper_link -->
  <arg name="load_robot_description" default="true" />
  <!-- <arg name="pipeline" default="ompl" /> -->
  <arg name="pipeline" default="pilz_industrial_motion_planner" />
  
  <!-- Remap follow_joint_trajectory -->
  <remap if="$(arg sim)" from="/scaled_pos_joint_traj_controller/follow_joint_trajectory" to="/pos_joint_traj_controller/follow_joint_trajectory"/>

  <!-- Launch moveit -->
  <include file="$(find single_robot_moveit_config)/launch/move_group.launch">
    <arg name="debug" value="$(arg debug)" />
    <arg name="pipeline" value="$(arg pipeline)" />
    <arg name="load_robot_description" value="$(arg load_robot_description)" />
  </include>
</launch>
